{% extends 'base.html.twig' %}

{% block title %}Your Entries{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Entries</h1>
        {% if entries|length > 0 %}
            <table class="entries-table">
                <tr>
                    <th>Date</th>
                    <th>Meal</th>
                    <th>Note</th>
                    <th>Actions</th>
                </tr>
                {% for entry in entries %}
                    <tr>
                        <td class="td-center">{{ entry.workday.date|date('Y-m-d') }}</td>
                        <td>{{ entry.workday.meal.name }}</td>
                        <td class="td-center">{{ entry.note }}</td>
                        <td class="td-center">
                            <ul class="actions">
                                <li>
                                    <a class="button-link"
                                       href="{{ path('entry_show', {'id': entry.id }) }}">View</a>
                                </li>
                                <li>
                                    <a class="button-link"
                                       href="{{ path('entry_delete', {'id': entry.id }) }}">Delete</a>
                                </li>
                                <li>
                                    <a class="button-link"
                                       href="{{ path('entry_edit', {'id': entry.id }) }}">Edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        {% endif %}
        {% if addEntry %}
            <span class="add-button">
                <a class="button-link"
                   href="{{ path('entry_create') }}">Create an Entry</a>
            </span>
        {% endif %}
    </div>
{% endblock %}
