{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Hello {{ user.name }}!</h1>
        <ul class="table-list">
            <li>Email: {{ user.email }}</li>
            <li>Name: {{ user.name }}</li>
            <li>Roles: {% for role in user.roles %}{{ role }}, {% endfor %}</li>
            <li>Actions: <a href="{{ path('user_delete', {'id': user.id }) }}">Delete</a>, <a href="{{ path('user_edit', {'id': user.id }) }}">Edit</a></li>
        </ul>
    </div>
{% endblock %}
